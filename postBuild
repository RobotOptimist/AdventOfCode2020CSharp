#!/bin/bash
set -ex

ln -s /srv/conda/envs/notebook/lib/dotnet/dotnet /usr/local/bin/dotnet
dotnet tool install -g Microsoft.dotnet-interactive \
    --add-source "https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet-tools/nuget/v3/index.json"

ln -s ~/.dotnet/tools/dotnet-interactive /usr/local/bin/dotnet-interactive
dotnet interactive jupyter install
